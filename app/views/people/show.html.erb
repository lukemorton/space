<%= @controls.person.name %> is at <%= @controls.person.location %>

<%= form_tag travel_url do %>
  <%= hidden_field_tag "travel[person_id]", @controls.person.id %>
  <%= collection_radio_buttons(:travel, :location, @controls.locations, :name, :name, prompt: true, checked: @controls.person.location) %>
  <%= submit_tag %>
<% end %>
