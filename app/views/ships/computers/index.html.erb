<div class="d-lg-flex justify-content-between align-items-center">
  <h1><%= @ship.name %></h1>

  <div class="text-right">
    <%= bootstrap_form_with scope: :disembark, url: disembark_url do |f| %>
      <%= f.hidden_field :ship_id, value: @ship.id %>
      <%= submit_tag 'Disembark', class: 'btn btn-outline-danger' %>
    <% end %>
  </div>
</div>

<%= render 'shared/flash' %>

<nav class="nav nav-tabs mt-3 mb-5">
  <%= link_to 'Flight deck', ship_flight_deck_path(@ship.slug), class: 'nav-item nav-link' %>
  <%= link_to 'Crew', ship_crew_index_path(@ship.slug), class: 'nav-item nav-link' %>
  <%= link_to 'Computers', ship_computers_path(@ship.slug), class: 'nav-item nav-link active' %>
</nav>

<div class="row mb-3">
  <div class="col-sm-4">
    <div class="card mb-2 shadow-sm">
      <div class="card-body">
        <div class="h5">Fuel Calculator</div>

        <p><%= @ship.computers.fuel_calculator.name %></p>

        <p><%= @ship.computers.fuel_calculator.description %></p>

        <div class="text-right">
          <button class="btn btn-outline-primary">
            Configure
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="card mb-2 shadow-sm">
      <div class="card-body">
        <div class="h5">Defence Computer</div>

        <p>Basic Defence Computer by Space Inc.</p>

        <p>A trusty but basic hull and shield computer.</p>

        <div class="text-right">
          <button class="btn btn-outline-primary">
            Configure
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="card mb-2 shadow-sm">
      <div class="card-body">
        <div class="h5">Weapons Computer</div>

        <p>Basic Weapons Computer by Space Inc.</p>

        <p>A relic from the early wars.</p>

        <div class="text-right">
          <button class="btn btn-outline-primary">
            Configure
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <div class="card mb-2 shadow-sm" style="border-style: dashed;">
      <div class="card-body text-center text-muted">
        <div class="h5">Computer slot #4</div>

        <p>Add another computer here.</p>

        <div class="mt-3">
          <button class="btn btn-outline-secondary">
            Add another computer
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="card mb-2 shadow-sm" style="border-style: dashed;">
      <div class="card-body text-center text-muted">
        <div class="h5">Computer slot #5</div>

        <p>Add another computer here.</p>

        <div class="mt-3">
          <button class="btn btn-outline-secondary">
            Add another computer
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="card mb-2 shadow-sm" style="border-style: dashed;">
      <div class="card-body text-center text-muted">
        <div class="h5">Computer slot #6</div>

        <p>Add another computer here.</p>

        <div class="mt-3">
          <button class="btn btn-outline-secondary">
            Add another computer
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
