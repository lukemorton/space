<%= render 'ships/shared/header' %>

<div class="row">
  <div class="col-md-7 col-lg-6">
    <div class="card bg-light shadow-sm mb-3">
      <div class="card-body text-center">
        <p class="strong">Location</p>

        <div class="h3"><%= @ship.location.name %></div>
      </div>
    </div>


    <div class="row">
      <div class="col-4 mb-3 md-sm-0">
        <div class="card bg-light shadow-sm">
          <div class="card-body text-center">
            <p class="strong">Fuel</p>

            <div class="h4 text-<%=@ship.fuel_status %>"><%= @ship.fuel %></div>
          </div>
        </div>
      </div>

      <div class="col-4 mb-3 md-sm-0">
        <div class="card bg-light shadow-sm">
          <div class="card-body text-center">
            <p class="strong">Hull</p>

            <div class="h4 text-<%=@ship.hull_status %>"><%= @ship.hull %></div>
          </div>
        </div>
      </div>

      <div class="col-4 mb-3 md-sm-0">
        <div class="card bg-light shadow-sm">
          <div class="card-body text-center">
            <p class="strong">Shields</p>

            <div class="h4 text-<%=@ship.shields_status %>"><%= @ship.shields %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-5 mt-3 mt-md-0 offset-lg-1">
    <div class="card bg-light shadow-sm">
      <div class="card-body">
        <%= bootstrap_form_with scope: :travel, url: travel_url do |f| %>
          <h3>Travel to destination</h3>

          <p>Pilot your ship to one of the destinations below.</p>

          <%= f.hidden_field :ship_id, value: @ship.id %>
          <%= f.hidden_field :ship_slug, value: @ship.slug %>

          <div class="my-4" style="max-height: 22rem; overflow: auto;">
            <% @ship.destinations.each do |destination| %>
              <label class="d-block bg-white border-0 p-3 js-destination" style="cursor: pointer;" id="destination-<%= destination %>">
                <div class="d-flex justify-content-between align-items-center">
                  <%= f.radio_button :location_id, destination.id, label:  destination.name, label_class: 'align-middle ml-3', checked: destination.checked?, disabled: destination.disabled? %>

                  <span class="badge badge-secondary badge-<%= destination.fuel_to_travel_status %>"><%= destination.fuel_to_travel %> fuel</span>
                </div>
              </label>
            <% end %>
          </div>

          <div class="text-right"><%= f.button 'Travel', class: 'btn btn-primary btn-lg' %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
