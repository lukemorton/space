<div class="d-lg-flex justify-content-between align-items-center">
  <h1><%= @ship.name %></h1>

  <div class="text-right">
    <%= bootstrap_form_with scope: :disembark, url: disembark_url do |f| %>
      <%= f.hidden_field :ship_id, value: @ship.id %>
      <%= submit_tag 'Disembark', class: 'btn btn-outline-danger' %>
    <% end %>
  </div>
</div>

<%= render 'shared/flash' %>

<nav class="nav nav-tabs mt-3 mb-5">
  <%= link_to 'Flight deck', ship_flight_deck_path(@ship.slug), class: 'nav-item nav-link active' %>
  <%= link_to 'Crew', ship_crew_index_path(@ship.slug), class: 'nav-item nav-link' %>
  <%= link_to 'Computers', ship_computers_path(@ship.slug), class: 'nav-item nav-link' %>
</nav>

<div class="row">
  <div class="col-md-7 col-lg-6">
    <div class="card shadow-sm mb-3">
      <div class="card-body text-center">
        <p class="strong">Location</p>

        <div class="h3"><%= @ship.location.name %></div>
      </div>
    </div>


    <div class="row">
      <div class="col-4 mb-3 md-sm-0">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <p class="strong">Fuel</p>

            <div class="h4 text-<%=@ship.fuel_status %>"><%= @ship.fuel %></div>
          </div>
        </div>
      </div>

      <div class="col-4 mb-3 md-sm-0">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <p class="strong">Hull</p>

            <div class="h4 text-<%=@ship.hull_status %>"><%= @ship.hull %></div>
          </div>
        </div>
      </div>

      <div class="col-4 mb-3 md-sm-0">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <p class="strong">Shields</p>

            <div class="h4 text-<%=@ship.shields_status %>"><%= @ship.shields %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-5 mt-3 mt-md-0 offset-lg-1">
    <%= bootstrap_form_with scope: :travel, url: travel_url do |f| %>
      <h2>Destinations</h2>
      <%= f.hidden_field :ship_id, value: @ship.id %>
      <%= f.hidden_field :ship_slug, value: @ship.slug %>

      <nav class="mb-3">
        <% @ship.destinations.each do |destination| %>
          <label class="card card-body bg-light border-0" data-toggle="pills" style="cursor: pointer;">
            <div class="d-flex justify-content-between align-items-center">
              <%= f.radio_button :location_id, destination.id, label:  destination.name, checked: destination.checked?, disabled: destination.disabled? %>

              <span class="badge badge-secondary badge-success"><%= destination.fuel_to_travel %> fuel</span>
            </div>
          </label>
        <% end %>
      </nav>

      <p class="text-right"><%= f.button 'Travel', class: 'btn btn-primary btn-lg' %></p>
    <% end %>
  </div>
</div>
