<div class="d-lg-flex justify-content-between align-items-center">
  <h1 class="mr-auto"><%= @ship.name %></h1>

  <div class="text-center" style="width: 8rem">
    <div class="strong">Fuel</div>

    <div class="h4 text-<%=@ship.fuel_status %> mb-0"><%= @ship.fuel %></div>
  </div>

  <div class="text-center" style="width: 8rem">
    <div class="strong">Hull</div>

    <div class="h4 text-<%=@ship.hull_status %> mb-0"><%= @ship.hull %></div>
  </div>

  <div class="text-center" style="width: 8rem">
    <div class="strong">Shields</div>

    <div class="h4 text-<%=@ship.shields_status %> mb-0"><%= @ship.shields %></div>
  </div>

  <div class="ml-4">
    <%= bootstrap_form_with scope: :disembark, url: disembark_url do |f| %>
      <%= f.hidden_field :ship_id, value: @ship.id %>
      <%= submit_tag 'Disembark', class: 'btn btn-outline-danger' %>
    <% end %>
  </div>
</div>

<%= render 'shared/flash' %>

<nav class="nav nav-pills my-3">
  <%= active_link_to 'Flight deck', ship_flight_deck_path(@ship.slug), class: 'nav-item nav-link' %>
  <%= active_link_to 'Crew', ship_crew_index_path(@ship.slug), class: 'nav-item nav-link' %>
  <%= active_link_to 'Computers', ship_computers_path(@ship.slug), class: 'nav-item nav-link' %>
  <%= active_link_to 'Dock Services', ship_dock_services_path(@ship.slug), class: 'nav-item nav-link' %>
</nav>
