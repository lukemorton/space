<%= render 'ships/shared/header' %>


<div class="row">
  <div class="col-md-4">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <%= bootstrap_form_with scope: :refuel, url: refuel_url do |f| %>
          <h3>Refuel</h3>

          <%= f.hidden_field :ship_id, value: @ship.id %>
          <%= f.hidden_field :ship_slug, value: @ship.slug %>

          <%= f.form_group :refuel, label: { text: 'Choose amount to refuel' } do %>
            <% @dock_services.refuel_options.each do |option| %>
              <label class="d-block border rounded px-3 py-2" style="cursor: pointer;">
                <div class="d-flex justify-content-between align-items-center">
                  <%= f.radio_button :refuel, option.type, label: option.label, label_class: 'ml-2', checked: option.checked? %>

                  <span class="badge badge-success ml-auto"><%= option.cost %></span>
                </div>
              </label>
            <% end %>
          <% end %>

          <div class="d-flex">
            <div class="ml-auto"><%= f.button 'Purchase', class: 'btn btn-primary btn-lg' %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
